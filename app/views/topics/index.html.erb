  <%= stylesheet_link_tag "topics", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "topics", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

<div class="topicContainer">


	

	<% @topics.each do |topic| %>
				<div class="topicTitle"><%= link_to topic.title, topic %> 	</div>
	
		<% topic.bookmarks.each do |bookmark| %>
			<% if topic.id = bookmark.topic_id %>
			<div class="topicURL">	<%= markdown bookmark.link %>	</div>	
			<% end %>
		
		<% end %>
		<br>
	<% end %>

	
	</div>
</div>
